<!DOCTYPE html>
<html lang="en">
<head>
  <title>RecipeFire - Sign Up</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="/css/main.css" rel="stylesheet">
    <link rel="stylesheet" href="./css/main2.css">
</head>
<body class="min-h-screen flex flex-col bg-gradient-to-b from-yellow-600 via-red-900 to-black min-h-screen w-full">

  <%-include('partials/header', {page: 'signup'}) %>

  <main class="container mx-auto flex-1 flex flex-col items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg p-8 fire-border max-w-md w-full mt-12">
      <h1 class="text-4xl text-fire font-extrabold mb-6 flex items-center gap-2">
        <span>ðŸ”¥</span> Sign Up
      </h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error mb-4"><%= error %></div>
      <% } %>
      <form action="/signup" method="post" class="flex flex-col gap-4">
        <div>
          <label for="name" class="block text-fire font-bold mb-1">Name</label>
          <input type="text" id="name" name="name" required class="input input-bordered w-full">
        </div>
        <div>
          <label for="email" class="block text-fire font-bold mb-1">Email</label>
          <input type="email" id="email" name="email" required class="input input-bordered w-full">
        </div>
        <div>
          <label for="password" class="block text-fire font-bold mb-1">Password</label>
          <input type="password" id="password" name="password" required class="input input-bordered w-full">
        </div>
        <div>
          <label for="confirm" class="block text-fire font-bold mb-1">Confirm Password</label>
          <input type="password" id="confirm" name="confirm" required class="input input-bordered w-full">
        </div>
        <button type="submit" class="btn btn-fire w-full mt-2">Sign Up</button>
      </form>
      <div class="text-center pt-4">
        <span class="text-gray-700">Already have an account?</span>
        <a href="/login" class="text-fire underline font-bold">Sign in</a>
      </div>
    </div>
  </main>
<!-- This is the end of the login form -->
  <%- include('partials/footer') %>
</body>
</html>
